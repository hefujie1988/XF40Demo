<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:d="http://xamarin.com/schemas/2014/forms/design"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d"
             xmlns:vm="clr-namespace:XF40Demo.ViewModels"
             x:Class="XF40Demo.Views.MarsWeatherPage"
             x:DataType="vm:MarsWeatherViewModel"
             Title="Mars Weather"
             BackgroundColor="{DynamicResource pageBackgroundColor}">

    <Grid RowSpacing="0">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- background image -->

        <!-- header -->

        <Grid Grid.Row="0"
              ColumnSpacing="0"
              RowSpacing="0"
              Padding="10, 5">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <Label Grid.Row="0" Grid.Column="0"
                   Text="Elysium Planitia"
                   TextColor="{DynamicResource strongTextColor}"
                   FontSize="32"/>

            <Label Grid.Row="1" Grid.Column="0"
                   Text="Sol 388 - December 29"
                   TextColor="{DynamicResource strongTextColor}"
                   FontSize="Large"/>

            <CheckBox Grid.Row="0" Grid.Column="1"
                      IsChecked="False"
                      Color="{DynamicResource textColor}"
                      VerticalOptions="Center"/>

            <Label Grid.Row="0" Grid.Column="2"
                   Text="°C"
                   TextColor="{DynamicResource textColor}"
                   FontSize="Large"
                   VerticalOptions="Center"/>

            <CheckBox Grid.Row="1" Grid.Column="1"
                      IsChecked="True"
                      Color="{DynamicResource textColor}"/>

            <Label Grid.Row="1" Grid.Column="2"
                   Text="°F"
                   TextColor="{DynamicResource textColor}"
                   FontSize="Large"/>

        </Grid>

        <!-- latest day -->
        
        <StackLayout Grid.Row="1"
                     Orientation="Vertical"
                     Spacing="5"
                     HorizontalOptions="Center"
                     VerticalOptions="Center">
            
            <Label Text="-65°F"
                   TextColor="{DynamicResource strongTextColor}"
                   FontSize="42"
                   HorizontalOptions="Center"/>
            
            <Label Text="v-98°F ^-17°F"
                   TextColor="{DynamicResource textColor}"
                   FontSize="Medium"
                   HorizontalOptions="Center"/>
            
            <Label Text="Spring"
                   TextColor="{DynamicResource textColor}"
                   FontSize="Medium"
                   HorizontalOptions="Center"/>
            
        </StackLayout>
        
        <!-- wind + pressure -->

        <Grid Grid.Row="2"
              ColumnSpacing="10"
              RowSpacing="0"
              Padding="10, 5">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <Label Grid.Row="0" Grid.Column="0"
                   Text="5.6 m/s"
                   TextColor="{DynamicResource strongTextColor}"
                   FontSize="Large"
                   HorizontalOptions="Center"/>

            <Label Grid.Row="1" Grid.Column="0"
                   Text="Wind Speed"
                   TextColor="{DynamicResource textColor}"
                   FontSize="Medium"
                   HorizontalOptions="Center"/>

            <Label Grid.Row="0" Grid.Column="1"
                   Text="SSE"
                   TextColor="{DynamicResource strongTextColor}"
                   FontSize="Large"
                   HorizontalOptions="Center"/>

            <Label Grid.Row="1" Grid.Column="1"
                   Text="Wind Direction"
                   TextColor="{DynamicResource textColor}"
                   FontSize="Medium"
                   HorizontalOptions="Center"/>

            <Label Grid.Row="0" Grid.Column="2"
                   Text="643 Pa"
                   TextColor="{DynamicResource strongTextColor}"
                   FontSize="Large"
                   HorizontalOptions="Center"/>

            <Label Grid.Row="1" Grid.Column="2"
                   Text="Air Pressure"
                   TextColor="{DynamicResource textColor}"
                   FontSize="Medium"
                   HorizontalOptions="Center"/>
        </Grid>

        <!-- recent days -->

        <!--<CollectionView Grid.Row="3"
                        ItemTemplate=""
                        ItemsSource=""
                        ItemSizingStrategy="MeasureFirstItem"
                        ItemsLayout="HorizontalList"
                        Margin="10, 5"/>-->

    </Grid>
    
</ContentPage>