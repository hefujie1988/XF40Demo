<?xml version="1.0" encoding="utf-8" ?>
<Shell xmlns="http://xamarin.com/schemas/2014/forms"
       xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
       xmlns:ffs="clr-namespace:FFImageLoading.Svg.Forms;assembly=FFImageLoading.Svg.Forms"
       xmlns:s="clr-namespace:XF40Demo.Shell"
       xmlns:v="clr-namespace:XF40Demo.Views"
       x:Class="XF40Demo.Shell.AppShell"
       Route="xf40demo"
       RouteHost="tranissoftware.com"
       RouteScheme="app"
       FlyoutHeaderBehavior="CollapseOnScroll"
       Title="XF4.0 Demo"
       FlyoutBackgroundColor="#484B51"
       x:Name="self">

    <Shell.FlyoutHeader>
        <s:MenuHeader/>
    </Shell.FlyoutHeader>

    <Shell.ItemTemplate>
        <DataTemplate>
            <ContentView BackgroundColor="#484B51" Padding="50, 5, 20, 5">
                <StackLayout Orientation="Horizontal" Spacing="10">
                    <ffs:SvgCachedImage Source="resource://XF40Demo.Resources.engineer.white.svg" HeightRequest="20" VerticalOptions="Center"/>
                    <Label Text="{Binding Title}" TextColor="AntiqueWhite" FontSize="Medium" VerticalOptions="Center"/>
                </StackLayout>
            </ContentView>
        </DataTemplate>
    </Shell.ItemTemplate>

    <ShellItem Title="Home">
        <ShellSection>
            <ShellContent Route="home">
                <v:MainPage/>
            </ShellContent>
        </ShellSection>
    </ShellItem>

</Shell>