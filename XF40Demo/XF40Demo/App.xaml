<?xml version="1.0" encoding="utf-8" ?>
<Application xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="XF40Demo.App">
    <Application.Resources>

        <Style x:Key="FA-Brands" TargetType="Label">
            <Setter Property="FontFamily" Value="FontAwesomeBrands" />
        </Style>

        <Style x:Key="FA-Solid" TargetType="Label">
            <Setter Property="FontFamily" Value="FontAwesomeSolid" />
        </Style>

        <Color x:Key="brandColor">#7F00FF</Color>
        <Color x:Key="pageBackgroundColor">#9BA0A6</Color>
        <Color x:Key="pageForegroundColor">GhostWhite</Color>
        <Color x:Key="textColor">#3B4252</Color>
        <Color x:Key="strongTextColor">#202125</Color>
        <Color x:Key="altTextColor">White</Color>
        <Color x:Key="disabledTextColor">DarkGray</Color>
        <Color x:Key="messageBackgroundColor">#9BA0A6</Color>
        <Color x:Key="messageTextColor">Default</Color>

    </Application.Resources>
</Application>